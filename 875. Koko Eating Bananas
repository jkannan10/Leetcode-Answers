class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int low=1;
        int high=-1;
        int k=0;
        for(int i:piles){
            high=Integer.max(high,i);
        }
        //System.out.print(high);
        while( low < high){
            int m=(low+high)/2;
             k=0;
            for(int val:piles){
                k+=Math.ceil((double)val/m);
             }
             if(k <= h) high=m;
             else low=m+1;
        }
        return high;
    }
}
